<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100sp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:ems="10"
            android:hint="@string/text_hint"
            android:inputType="text" />

        <Button
            android:id="@+id/fileSaveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/file_save" />

        <Button
            android:id="@+id/fileLoadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/file_load" />

        <Button
            android:id="@+id/pdfSaveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pdf_save" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/photoView"
            android:layout_width="match_parent"
            android:layout_height="300sp" />

        <Button
            android:id="@+id/photoTakeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_start" />

        <Button
            android:id="@+id/photoSaveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_save" />

        <Button
            android:id="@+id/videoTakeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/video_start" />
    </LinearLayout>

</LinearLayout>